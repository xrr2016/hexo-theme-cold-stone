<!DOCTYPE html>
<html lang="<%- config.language %>">
  <%- partial('_partial/head') %>
  <body>
    <% if (is_home()) { %>
      <%- partial('_partial/prelude', null, {cache: true}) %>
    <% } %>

    <% if (!is_post()) { %>
      <%- partial('_partial/header', null, {cache: true}) %>
    <% } %>

    <main class="main wrapper">
      <%- body %>
      <%- partial('_partial/google_adsense') %>
    </main>

    <% if (!is_post()) { %>
      <%- partial('_partial/footer', null, {cache: true}) %>
    <% } %>

    <%- partial('_partial/script', null, {cache: false}) %>
  </body>
</html>
